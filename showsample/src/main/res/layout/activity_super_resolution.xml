<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/fig1"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="图1" />

            <Button
                android:id="@+id/fig2"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="图2" />

            <Button
                android:id="@+id/fig3"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:text="图3" />

            <Button
                android:id="@+id/VASR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VASR"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/cost_time_raw_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/rawFigure"
            android:layout_width="match_parent"
            android:layout_height="640px"
            fresco:actualImageScaleType="center"
            fresco:placeholderImage="@color/checker_board_dark"/>

        <TextView
            android:id="@+id/cost_time_SR_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/srFigure"
            android:layout_width="match_parent"
            android:layout_height="1280px"
            fresco:actualImageScaleType="centerInside"
            fresco:placeholderImage="@color/checker_board_dark"/>


    </LinearLayout>



</android.support.v4.widget.NestedScrollView>