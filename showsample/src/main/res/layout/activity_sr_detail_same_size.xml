<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context=".SrDetailSameSizeActivity">

    <TextView
        android:id="@+id/sameSizetextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/raw_image"
        android:textSize="20dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/rawDetailSameSizeFigure"
        android:layout_width="264dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        fresco:actualImageScaleType="fitCenter"
        />

    <TextView
        android:id="@+id/sameSizetextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/sr_image"
        android:textSize="20dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/srDetailSameSizeFigure"
        android:layout_width="264dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        fresco:actualImageScaleType="fitCenter"
        />

</LinearLayout>