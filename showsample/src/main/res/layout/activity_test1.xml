<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_view"
                android:layout_width="130dp"
                android:layout_height="130dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新设置图片"
                android:onClick="applyNewUri" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_view1"
                android:layout_width="130dp"
                android:layout_height="130dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新设置图片"
                android:onClick="applyNewUri1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_view2"
                android:layout_width="130dp"
                android:layout_height="130dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新设置图片"
                android:onClick="applyNewUri2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_view3"
                android:layout_width="130dp"
                android:layout_height="130dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新设置图片"
                android:onClick="applyNewUri3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_view4"
                android:layout_width="130dp"
                android:layout_height="130dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新设置图片"
                android:onClick="applyNewUri4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_view5"
                android:layout_width="130dp"
                android:layout_height="130dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新设置图片"
                android:onClick="applyNewUri5" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
